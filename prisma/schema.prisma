generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  name         String?
  password     String
  refreshToken String?
  User_A       User[]  @relation("Friends")
  User_B       User[]  @relation("Friends")
  groups       Group[] @relation("GroupToUser")
}

model Group {
  id    String @id @default(uuid())
  name  String
  users User[] @relation("GroupToUser")
}
